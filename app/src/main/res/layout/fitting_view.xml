<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="66.6" >

        <!-- Fitting Id had to be made invisible as its not relevant content for the user -->
        <TextView
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:textColor="@color/colorPlain"
            android:id="@+id/textFitID"/>

        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_height="90dp"
            android:textColor="@color/colorPlain"
            android:id="@+id/textListDate"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="33.3">

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/colorPlain"
            android:id="@+id/textListName" />

        <TextView
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/colorPlain"
            android:id="@+id/textListEmail" />

        <TextView
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/colorPlain"
            android:id="@+id/textListPhone" />

    </LinearLayout>

</LinearLayout>